<script>
document.addEventListener("DOMContentLoaded", function() {
  const languageDropdown = document.getElementById("language");
  const selectedLanguageDisplay = document.getElementById("selectedLanguage");

  // Function to update the selected language when the user makes a selection
  function handleChange() {
    const selectedLanguage = languageDropdown.value;
    selectedLanguageDisplay.textContent = selectedLanguage;
    localStorage.setItem("selectedLanguage", selectedLanguage); // Save selected language to localStorage
    // You can perform any additional actions here when the user selects a language
  }

  // Add event listener to the dropdown to trigger the handleChange function
  languageDropdown.addEventListener("change", handleChange);

  // Initialize the selected language display from localStorage if available
  const savedLanguage = localStorage.getItem("selectedLanguage");
  if (savedLanguage) {
    languageDropdown.value = savedLanguage;
    selectedLanguageDisplay.textContent = savedLanguage;
  }

  // Listen for changes in other tabs/windows and update the component accordingly
  window.addEventListener("storage", function(event) {
    if (event.key === "selectedLanguage") {
      const updatedLanguage = event.newValue;
      languageDropdown.value = updatedLanguage;
      selectedLanguageDisplay.textContent = updatedLanguage;
    }
  });
});
</script>

